<html>
	<head>
		<title>The Gossip Project</title>
	</head>
	<body>
		<h1>Bienvenue sur super Gossip</h1>
		<table class="table">
			<thead class="thead-dark">
				<tr>
					<th scope="col">id</th>
					<th scope="col">Author</th>
					<th scope="col">Gossip</th>
				</tr>
			</thead>
			<tbody>
				<% i = 1 %>
				<% @all_users.each do |user| %>
				<th scope="row"><%= i %></th>
				<td>
				<%= user.first_name %></td>
				<% usergossip = user.gossips %>
				<td><% usergossip.each do |gossip| %>
					<a href="/potin/<%= gossip.id %>"><%= gossip.title%></a> ;
				<%end%></td>
				
			</tr>
			<% i+= 1%>
			<% end %>
		</tbody>
	</table>
</body>
</html>